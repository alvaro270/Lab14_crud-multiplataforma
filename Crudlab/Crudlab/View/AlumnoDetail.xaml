<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Agregar Alumno"
             x:Class="Crudlab.View.AlumnoDetail">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Placeholder="Nombre" x:Name="nombreEntry"/>
            <Entry Placeholder="F.nacimiento" x:Name="cumpleEntry"/>
            <Entry Placeholder="Nota" x:Name="notaEntry"/>
            <Entry Placeholder="Ha sido aprobado?" x:Name="apruebaEntry"/>
            <Button Text="Guardar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>